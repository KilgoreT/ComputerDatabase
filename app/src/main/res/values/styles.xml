<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeColor">@color/gray</item>
    </style>

    <style name="Divider">
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="TextHeader" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="TextBody" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
